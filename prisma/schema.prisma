generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  email      String   @unique
  password   String
  firstName  String
  lastName   String
  phone      String?
  role       Role     @default(USER)
  isVerified Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  lostItems  LostItem[]
  foundItems FoundItem[]
  claims     Claim[]

  @@map("users")
}

enum Role {
  USER
  ADMIN
}

model LostItem {
  id           String     @id @default(cuid())
  userId       String
  itemName     String
  category     String
  description  String
  dateLost     DateTime
  location     String
  imageUrl     String?
  status       ItemStatus @default(ACTIVE)
  contactEmail String
  contactPhone String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("lost_items")
}

enum ItemStatus {
  ACTIVE
  FOUND
  CLOSED
}

model FoundItem {
  id              String          @id @default(cuid())
  userId          String
  itemName        String
  category        String
  description     String
  dateFound       DateTime
  locationFound   String
  currentLocation String
  imageUrl        String?
  status          FoundItemStatus @default(AVAILABLE)
  expiresAt       DateTime
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  claims          Claim[]
  marketplaceItem MarketplaceItem?

  @@map("found_items")
}

enum FoundItemStatus {
  AVAILABLE
  CLAIMED
  MARKETPLACE
}

model Claim {
  id             String      @id @default(cuid())
  foundItemId    String
  claimantId     String
  description    String
  contactEmail   String
  contactPhone   String?
  additionalInfo String?
  status         ClaimStatus @default(PENDING)
  reviewedBy     String?
  reviewNotes    String?
  reviewedAt     DateTime?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  foundItem FoundItem @relation(fields: [foundItemId], references: [id], onDelete: Cascade)
  claimant  User      @relation(fields: [claimantId], references: [id], onDelete: Cascade)

  @@map("claims")
}

enum ClaimStatus {
  PENDING
  APPROVED
  REJECTED
}

model MarketplaceItem {
  id             String            @id @default(cuid())
  foundItemId    String            @unique
  itemName       String
  category       String
  description    String
  imageUrl       String?
  pickupLocation String
  status         MarketplaceStatus @default(AVAILABLE)
  claimedBy      String?
  claimedAt      DateTime?
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  foundItem FoundItem @relation(fields: [foundItemId], references: [id], onDelete: Cascade)

  @@map("marketplace_items")
}

enum MarketplaceStatus {
  AVAILABLE
  CLAIMED
}
